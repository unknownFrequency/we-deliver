<div class="row" style="padding: 4em 0 0 30%">
        <%= form_with scope: :product, local: true do |form| %>
                <div class="row">
                        <div class="input-field col s6">
                                <%= form.text_field :name, class: "validate" %>
                                <%= form.label "Produktnavn" %>
                        </div>
                        <div class="input-field col s6"></div>
                </div>

                <div class="row">
                        <div class="input-field col s1">
                                <%= form.text_field :price, class: "validate" %>
                                <%= form.label "Pris" %>
                        </div>
                        <div class="input-field col s1"></div>
                        <div class="input-field col s4">
                                <%= form.text_field :brand, class: "validate" %>
                                <%= form.label "Producent" %>
                        </div>
                        <div class="input-field col s6"></div>
                </div>

                <div class="row">
                        <div class="col s6">
                                <div class="input-field">
                                        <%= form.text_area :description, class: "materialize-textarea" %>
                                        <%= form.label "Beskrivelse" %>
                                </div>
                        </div>
                        <div class="col s6"></div>
                </div>

                <div class="row">
                        <div class="col s1">
                                <%= form.submit class: "btn" %>
                        </div>
                        <div class="col s11"></div>
                </div>
        <% end %>
</div>
