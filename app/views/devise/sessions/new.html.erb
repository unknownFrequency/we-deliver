<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%# <div class="field"> %>
  <%#   <%= f.label :email %1><br /> %>
  <%#   <%= f.email_field :email, autofocus: true, autocomplete: "email" %1> %>
  <%# </div> %>

  <div class="field">
    <%= f.label :phone, "Telefon" %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log ind" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
