<h2>Current Cart</h2>

<table>
  <thead>
    <tr>
      <td>Produkt</td>
      <td>Pris</td>
      <td>Antal</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= item.qty %></td>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Slet", class: "btn" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>


  <tfoot>
    <tr>
      <td>
        <hr />
        Total: 
      </td>
    </tr>
    <tr>
      <td><%= number_to_kr current_cart.total %></td>
    </tr>
  </tfoot>
</table>

<%= form_for @order, url: checkout_path do |f| %>
  <%= f.submit "Bestil nu", class: "btn waves-effect waves-light" %>
<% end %>
