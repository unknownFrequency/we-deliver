<h1>Produkter</h1>
<% if user_signed_in? && current_user.admin %>
  <%= link_to "Nyt Produkt", new_product_path, class: "btn" %>
<% end %>
<%= isAdmin.inspect %>

<table class="responsive-table">
  <thead>
    <tr>
      <td>Produkt</td>
      <td>Producent</td>
      <td>Pris</td>
      <td>Beskrivelse</td>
      <td>Kategori</td>
      <td>Antal</td>
      <td><span style="font-size: 2em">+</span></td>
   </tr>
  </thead>
  <tbody>

  <% if @products.empty? %>
    <div class="card blue-grey red darken-1">
      <div class="card-content white-text">
        <span class="card-title error">Ingen produkter</span>
      </div>
    </div>
  <% else %>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.price %></td>
        <td><%= truncate product.description, length: 300 %></td>
        <td>
          <% product.categories.each do |c| %>
            <%= c.name %>
          <% end %>
        </td>
        <td><%= product.qty %></td>
        <td><span style="font-size: 2em">
            <%= form_tag order_items_path do %>
              <%= hidden_field_tag :product_id, product.id %>
              <%= number_field_tag :qty, 1 %>
              <%= hidden_field_tag :price, 1 %>

              <%= submit_tag "LÃ¦g i kurv" %>
            <% end %>
        </span></td>
       </tr>
     <% end %>
   <% end %>
  <tbody>
</table>

