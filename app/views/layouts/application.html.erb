<!DOCTYPE html>
<html>
  <head>
    <title>WeDeliver</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <%= render "layouts/header" %>

    <div class="row">
      <div class="col s12 m6">
        <% flash.each do |key, message| %>
          <% if key == "success" %>
            <div class="card blue-grey darken-1 "><!-- TODO: add css class for error and success -->
              <div class="card-content white-text">
                <span class="card-title success"><%= key %></span>
                <p><%= message %></p>
              </div>
            </div>
          <% else %>
            <div class="card blue-grey red darken-1">
              <div class="card-content white-text">
                <span class="card-title error"><%= key %></span>
                <p><%= message %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
