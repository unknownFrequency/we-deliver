<h2>Bekræft oplysninger</h2>

<%= form_for @order, url: confirm_order_path do |f| %>
  <%# <%= f.hidden_field :user_id, value: current_user.id %1> %>
  <%= f.hidden_field :status, value: "open" %>
  <div class="row">
    <div class="input-field col s5">
      <%= f.text_field :delivery_address, class: "validate", value: @address %>
      <%= f.label :delivery_address, "Leverings addresse", class: "active"%>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s5">
      <%= f.text_field :zip, class: "validate", value: @zip %>
      <%= f.label :zip, "Post nr.", class: "active"%>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s5">
      <select name="order[payment_type]" id="order_payment_type">
        <option disabled selected value class="dropdown-content">Vælg betaling</option> 
        <% Order::PAYMENT_TYPES.each do |key, payment| %>
          <option class="dropdown-content" value="<%= key %>">
            <%= payment %>
          </option>
        <% end %>
      </select>
      <%= f.label :payment_type, "Betalings metode", class: "active" %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s5">
      I alt - <%= number_to_kr @order.total %>
    </div>
  </div>
  <%= f.submit "Bestil nu", class: "btn" %>
<% end %>
