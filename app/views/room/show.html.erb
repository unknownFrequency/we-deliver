<div>
	<div id="chat-window">
		<header><%= current_room.name %></header>

		<div id="chat-box" data-channel="rooms" data-room-id=<%= current_room.id%> >
			<% @messages.each do |message| %>
				<%= render partial: "shared/message", locals: { message: message } %>
			<% end %>
		</div>

		<div class="row">
			<%= form_for @message, class: "col s12" do |f| %>
				<div class="row">
					<div class="input-field col s6">
						<%= f.text_field :body, id: "message-field", class: "validatea" %>
						<%= f.submit "Send", class: "btn", id: "message-btn" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
